# Security headers for production deployment
# This file is used by Netlify, Vercel, and other static hosting platforms

/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()
  X-XSS-Protection: 1; mode=block
  Content-Security-Policy: default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://api.rydercup.com; base-uri 'self'; form-action 'self'; frame-ancestors 'none'; object-src 'none';
