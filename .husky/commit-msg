#!/usr/bin/env sh
# Try to source husky helper if present; otherwise fallback.
HUSKY_SH="$(dirname -- "$0")/_/husky.sh"
if [ -f "$HUSKY_SH" ]; then
	. "$HUSKY_SH"
fi

# Run commitlint if available via npx, otherwise skip the check.
if command -v npx >/dev/null 2>&1; then
	npx --no -- commitlint --edit "$1" || exit 1
fi

exit 0
